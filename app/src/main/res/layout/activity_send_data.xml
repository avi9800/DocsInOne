<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SendData">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the code to unique send"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:id="@+id/enter_code_text"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/unique_code"
        android:layout_below="@+id/enter_code_text"
        android:layout_marginTop="30dp"
        android:hint="Enter the Unique code here"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan Qr"
        android:id="@+id/Scan"
        android:layout_below="@id/unique_code"
        android:layout_marginTop="17dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:onClick="send_data"
        android:id="@+id/send_on_unique_code"/>
</RelativeLayout>