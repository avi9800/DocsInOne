<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="android.javapapers.com.majorproject">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".Activities.qrcodemaker"></activity>
        <activity android:name=".Activities.scannerView" />
        <activity android:name=".Activities.SendData" />
        <activity android:name=".Activities.Recieving_Activity" />
        <activity android:name=".Activities.Sending_Activity" />
        <activity android:name=".ImageActivity.MainActivityForImageCapture" />
        <activity
            android:name=".ImageActivity.OnImageClickActivity"
            android:parentActivityName=".Activities.MainActivity" />
        <activity
            android:name=".SplashScreen"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.verfication_of_otp"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>